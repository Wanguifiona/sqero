{{#partial "content"}}
    <div class="squad-part">
        <p>Name:</p>
        <p>{{ squad.name }}</p>
        <p>Size:</p>
        <p>{{ squad.size }}</p>
        <p>Cause:</p>
        <p>{{ squad.cause }}</p>

        <p>

            {{#if post.published }}
                <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  Published
            {{else}}
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Draft
            {{/if}}
        </p>
    </div>
{{/partial}}

{{> layout.hbs}}