{{#partial "content"}}
    {{#each hero}}
    <div class="hero-part">
<a href="/hero-form">Add new Hero to list</a>
    <p>Name:{{ name }}</p>
    <p>Age:{{ age }}</p>
    <p>Powers:{{ powers }}</p>
    <p>Weakness:{{ weakness }}</p>
    <p>

        {{#if post.published }}
            <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  Published
        {{else}}
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Draft
        {{/if}}
    </p>
    </div>
    {{/each}}
{{/partial}}

{{> layout.hbs}}