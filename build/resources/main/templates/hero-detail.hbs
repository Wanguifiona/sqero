{{#partial "content"}}
    <div class="hero-part">
    <p>Name:</p>
    <p>{{ hero.name }}</p>
    <p>Age:</p>
    <p>{{ hero.age }}</p>
    <p>Powers:</p>
    <p>{{ hero.powers }}</p>
    <p>Weakness:</p>
    <p>{{ hero.weakness }}</p>
    <p>

        {{#if post.published }}
            <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  Published
        {{else}}
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Draft
        {{/if}}
    </p>
    </div>
{{/partial}}

{{> layout.hbs}}